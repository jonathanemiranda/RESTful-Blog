<% include ./partials/header%>

<h1>Index</h1>

<%blogs.forEach(function(blog){%>
	<div>
		<h2><%=blog.title%></h2>
		<img src="<%=blog.image%>">
		<span><%=blog.created.toDateString()%></span>
		<p><%=blog.body.substring(0, 100)%>...</p>
		<button class="ui blue button">
			<a href="/blogs/<%=blog._id%>">Read More</a>
		</button>
	</div>
<%})%>


<% include ./partials/footer%>